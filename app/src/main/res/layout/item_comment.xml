<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">
       <LinearLayout
           android:layout_margin="5dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_user_cmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khailn"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>
           <khanhnqph30151.fptpoly.duan1.user.home.comment.RatingStarView
               android:id="@+id/ratingstarview"
               android:layout_marginTop="3dp"
               android:layout_width="120dp"
               android:layout_height="15dp"/>

        <TextView
            android:id="@+id/tv_content_cmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Hương vị rất đặc biệt, món ăn rất ngon, giao hàng nhanh"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"/>
       </LinearLayout>

</androidx.cardview.widget.CardView>




