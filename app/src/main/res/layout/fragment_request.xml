<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_red"
        app:title="Phản Hồi"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/main_red"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_facebook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="18dp"
            android:background="@drawable/logo_facebook" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginRight="17dp"
            android:text="Chúng tôi luôn lắng nghe phản hồi của khách hàng. \n\nHãy cho chúng tôi biết trải nghiệm hoặc ý kiến của bạn."
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="-130dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/boder_radius_cardview_request"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="Phản Hồi"
            android:textColor="@color/main_red"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên (*):"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/user_rq_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_request_edittext"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại (*):"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/user_rq_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_request_edittext"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email (*):"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/user_rq_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_request_edittext"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung (*):"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/user_rq_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_request_edittext"
                android:layout_margin="10dp"
                android:lines="2"/>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_user_rq_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/main_red"
        android:text="Gửi phản hồi" />

</LinearLayout>