<!--                android:text="Đã Thanh Toán"-->
<!--                android:gravity="center"-->
<!--                android:textSize="30dp"-->
<!--                android:textStyle="bold"/>-->
<!--        </LinearLayout>-->


    </LinearLayout>
</androidx.cardview.widget.CardView>