<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8FBFF"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">




    >


    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/dmsans_bold_italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginHorizontal="30dp"
            android:text="Thêm Món Ăn"

            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30dp" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="30dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Đường dẫn ảnh: "
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edt_dialog_listfood_add_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="4"
                android:background="@drawable/style_dialog_edittext"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Tên món ăn: "
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edt_dialog_listfood_add_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="4"
                android:background="@drawable/style_dialog_edittext"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Giá tiền: "
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edt_dialog_listfood_add_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="4"
                android:background="@drawable/style_dialog_edittext"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Mô tả: "
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edt_dialog_listfood_add_des"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingLeft="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="4"
                android:background="@drawable/style_dialog_edittext"
                android:textSize="20dp" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_dialog_listfood_add_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:backgroundTint="@color/main_red"
            android:text="Thêm" />

                android:paddingLeft="10dp"
                android:text="Đường dẫn ảnh: "
                android:textSize="15dp"
                android:textStyle="bold|italic" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_dialog_listfood_add_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />
        </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên món: "
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold|italic" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_dialog_listfood_add_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Giá tiền: "
                android:textSize="15sp"
                android:textStyle="bold|italic" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_dialog_listfood_add_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả: "
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:textStyle="bold|italic" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_dialog_listfood_add_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dialog_listfood_add_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/main_red"
                android:text="Thêm" />

            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/btn_dialog_listfood_add_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/main_red"
                android:text="Thoát" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>