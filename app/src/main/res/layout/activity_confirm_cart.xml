<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FBFF"
    android:orientation="vertical"
    tools:context=".ConfirmCart">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_confirm_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="30dp"
            android:src="@drawable/baseline_arrow_back_ios_24"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/banner_comfirm_cart"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn đã đặt hàng thành công"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chúng tôi sẽ gửi với tốc độ nhanh khủng khiếp tới cho bạn theo địa chỉ"
            android:textStyle="normal"
            android:textSize="20dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_confirm_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hehe"
            android:textColor="@color/main_red"
            android:textStyle="normal"
            android:textSize="30dp"
            android:gravity="center"
            />
        <TextView
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hãy để ý điện thoại nhé !"
            android:textStyle="normal"
            android:textSize="15dp"
            android:gravity="center"
            />

    </LinearLayout>



</LinearLayout>