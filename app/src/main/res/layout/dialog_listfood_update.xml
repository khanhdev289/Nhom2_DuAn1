<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:background="#F8FBFF"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Thay đổi Món Ăn"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Đường dẫn ảnh: "
                android:textSize="20dp"
                 />

            <EditText
                android:id="@+id/edt_dialog_listfood_update_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="4"
                android:background="@drawable/style_dialog_edittext"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Loại món: "
                android:textSize="20dp"
                />

            <Spinner
                android:id="@+id/spn_dialog_listfood_update_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="4"
                android:background="@drawable/style_dialog_edittext"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Tên món ăn: "
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edt_dialog_listfood_update_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="4"
                android:background="@drawable/style_dialog_edittext"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Giá tiền: "
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edt_dialog_listfood_update_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="4"
                android:background="@drawable/style_dialog_edittext"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Mô tả: "
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edt_dialog_listfood_update_des"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingLeft="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="4"
                android:background="@drawable/style_dialog_edittext"
                android:textSize="20dp" />

        </LinearLayout>
            <Button
                android:id="@+id/btn_dialog_listfood_update_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:backgroundTint="@color/main_red"
                android:text="Xác Nhận" />
    </LinearLayout>

</androidx.cardview.widget.CardView>